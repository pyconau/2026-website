---
interface Props {
  name: string;
  description: string;
  image: string;
  priceLevel?: string;
  distance: string;
  link: string;
  linkText?: string;
  isMain?: boolean;
}

const {
  name,
  description,
  image,
  priceLevel,
  distance,
  link,
  linkText = "Visit Hotel Website",
  isMain = false,
} = Astro.props;
---

<div
  class={`flex flex-col md:flex-row bg-white rounded-[3.125rem] overflow-hidden ${isMain ? "md:items-center" : ""}`}
>
  <div
    class={`${isMain ? "md:w-1/3" : "md:w-1/3"} w-full h-64 md:h-auto relative shrink-0`}
  >
    <img
      src={image}
      alt={name}
      class="w-full h-full object-cover absolute inset-0"
    />
  </div>

  <div class="p-10 flex-grow flex flex-col justify-center">
    <h3 class="font-serif text-3xl mb-4 text-charcoal">{name}</h3>

    <div class="text-charcoal mb-6 space-y-4">
      <slot />
    </div>

    <div
      class="mt-auto pt-4 flex flex-col md:flex-row md:items-center justify-between gap-4"
    >
      <div
        class="flex flex-col md:flex-row md:items-center gap-2 md:gap-8 text-sm font-medium"
      >
        {
          priceLevel && (
            <span class="text-charcoal font-bold tracking-widest">
              {Array.from({ length: 3 }).map((_, i) => (
                <span
                  class={
                    i < priceLevel.length ? "text-charcoal" : "text-gray-300"
                  }
                >
                  $
                </span>
              ))}
            </span>
          )
        }
        <span class="text-charcoal">{distance}</span>
      </div>

      {
        isMain ? (
          <a
            href={link}
            target="_blank"
            class="flex items-center gap-x-2 bg-[#A3E8B8] hover:bg-[#8CD9A3] text-charcoal font-medium px-8 py-3 rounded-full transition-colors text-center"
          >
            {linkText}
            <img class="h-3" src="/images/arrow-small.svg" alt="down arrow">
          </a>
        ) : (
          <a
            href={link}
            target="_blank"
            class="flex items-center gap-x-2 text-[#8B5CF6] font-bold hover:text-[#7C3AED] transition-colors text-sm uppercase tracking-wide"
          >
            {linkText}
            <img class="h-3" src="/images/arrow-small.svg" alt="down arrow">
          </a>
        )
      }


    </div>
  </div>
</div>
