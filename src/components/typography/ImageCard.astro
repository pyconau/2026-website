---
import { twMerge } from "tailwind-merge";
import HomePageArrow from "../HomePageArrow.astro";

interface Props {
  href: string;
  src: string;
  alt: string;
  title: string;
  className?: string;
  backgroundColor?: "violet" | "lavender";
}

const { backgroundColor, className, href, src, alt, title } = Astro.props;
---

<a
  href={href}
  class={twMerge(
    "fadeInUp rounded-t-[3.125rem] block overflow-hidden group hover:rounded-b-[3.125rem] transition-all duration-300",
    `bg-${backgroundColor || "violet"}`,
    className
  )}
  title={title}
>
  <div class="">
    <img
      src={src}
      class="rounded-b-[3.125rem]"
      alt={alt}
      aria-roledescription=""
    />
  </div>
  <div
    class="flex items-center justify-between pt-5 pb-7 px-7 group-hover:px-10 transition-all duration-300"
  >
    <h3 class="text-2xl font-sans font-medium text-white"><slot /></h3>

    <HomePageArrow />
  </div>
</a>
