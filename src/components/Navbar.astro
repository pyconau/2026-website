---
// Navigation bar with logo and menu items
import RegisterButtonCTA from './RegisterButtonCTA.astro';
---

<nav class="bg-white lg:rounded-bl-[5.9rem] lg:rounded-br-[5.9rem] rounded-bl-[2.3rem] rounded-br-[2.3rem] sticky top-0 z-40">
  <div class="2xl:container 2xl:mx-auto lg:px-20 px-10 lg:py-12 py-8">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-6 sm:gap-0">
      <!-- Row 1: Logo and Date Lockup -->
      <div class="flex items-center gap-4 lg:gap-6 w-full sm:w-auto justify-between sm:justify-start">
        <!-- Logo -->
        <a href="/" class="flex-shrink-0">
          <img
            src="/PyConAU-26_WIDE_Charcoal-RGB.svg"
            alt="PyCon AU 2026"
            class="h-8 lg:h-12 w-auto"
          />
        </a>

        <!-- Date Lockup on mobile, hidden on sm+ -->
        <div class="flex flex-col items-start sm:hidden">
          <img
            src="/2026 Date Lockup_Charcoal.svg"
            alt="November 20-23, 2026"
            class="h-5 w-auto"
          />
          <p class="text-pycon-purple font-jakarta font-bold text-xs mt-0.5">
            Sofitel Brisbane Central
          </p>
        </div>
      </div>

      <!-- Date Lockup (centered) - visible on sm+ -->
      <div class="hidden sm:flex sm:flex-1 sm:justify-center">
        <div class="flex flex-col items-start">
          <img
            src="/2026 Date Lockup_Charcoal.svg"
            alt="November 20-23, 2026"
            class="h-5 lg:h-9 w-auto"
          />
          <p class="text-pycon-purple font-jakarta font-bold text-xs lg:text-xs mt-0.5">
           Sofitel Brisbane Central
          </p>
        </div>
      </div>

      <!-- Navigation items -->
      <div class="flex items-center gap-6 lg:gap-8 w-full sm:w-auto justify-end">
        <a
          href="/#latest-updates"
          class="text-pycon-black hover:text-pycon-purple font-jakarta font-semibold text-sm lg:text-base transition-colors"
        >
          News
        </a>

        <RegisterButtonCTA />
      </div>
    </div>
  </div>
</nav>
